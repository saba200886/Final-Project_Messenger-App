<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/main_page_rv_padding_top"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/list_horizontal_margins">


    <ImageView
        android:id="@+id/main_page_list_imageView"
        android:layout_width="@dimen/rv_list_avatar_size"
        android:layout_height="@dimen/rv_list_avatar_size"
        android:gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_image_placeholder"
        android:contentDescription="@string/main_page_list_imageview" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_page_list_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginStart="@dimen/rv_list_item_left_margin"
                android:layout_marginTop="@dimen/main_page_name_top_margin"
                android:text="@string/default_name"
                android:textColor="@color/black"
                android:textSize="@dimen/big_text_size"/>


            <TextView
                android:id="@+id/main_page_list_sentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/main_page_name_top_margin"
                android:text="@string/default_time_list"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>


        <TextView
            android:id="@+id/main_page_list_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_last_message"
            android:layout_marginTop="@dimen/main_page_rv_message_top_margin"
            android:layout_marginEnd="@dimen/main_page_rv_message_right_margin"
            android:layout_marginStart="@dimen/rv_list_item_left_margin"
            android:lines="2"/>

    </LinearLayout>


</LinearLayout>
