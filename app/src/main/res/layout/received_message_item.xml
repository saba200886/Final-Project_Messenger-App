<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center|start">

    <TextView
        android:id="@+id/received_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:background="@drawable/received_message"
        android:paddingTop="@dimen/side_padding"
        android:paddingBottom="@dimen/side_padding"
        android:layout_marginLeft="@dimen/side_padding"
        tools:ignore="RtlCompat"
        android:text="hi dfh dfdvbxvb fbxbxbxvbxbx fbssfgsgsfg fsbsfbsf "
        android:maxWidth="@dimen/max_text_width"/>
    <TextView
        android:id="@+id/received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/side_padding"
        android:layout_gravity="center"
        android:text="18:10"/>

</LinearLayout>